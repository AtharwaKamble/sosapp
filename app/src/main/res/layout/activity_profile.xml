<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/top_linear_layout"
            android:background="@drawable/top_layout_background"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:src="@drawable/logo"
                android:id="@+id/profile_image"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/edit_text_background1"
                android:hint="Enter Name"
                android:padding="12dp"
                android:textAlignment="center"
                android:inputType="text"
                android:id="@+id/name"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edit_text_background1"
                android:hint="Enter Email Address"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile No :"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="13"
                    android:text="954885432"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/mobile_number"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent Contact Details"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:layout_margin="10dp"
                android:textColor="#111111"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background1"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:hint="Enter Parent Mobile Number"
                android:id="@+id/parent_mobile_number"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/parent_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background1"
                android:padding="15dp"
                android:layout_marginHorizontal="15dp"
                android:hint="Enter Parent Email Address"
                android:inputType="textEmailAddress"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Address Details"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:textColor="#111111"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background1"
                android:layout_margin="15dp"
                android:padding="40dp"
                android:hint="Enter Current Address"
                android:id="@+id/current_address"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background1"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="15dp"
                android:padding="40dp"
                android:hint="Enter Permanent Address"
                android:id="@+id/permanent_address"/>

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/save_btn_background"
                android:text="Save"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"/>




        </LinearLayout>



    </LinearLayout>






</ScrollView>